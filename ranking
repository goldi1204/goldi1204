#include<stdio.h>

int main(void)
{
        int player=1;
        int tmp;

        char name[player][5];
        int score[player][5];

        FILE *ranknamein, *ranknameout, *rankscorein, *rankscoreout=NULL;
        ranknamein = fopen("rankname", "wt");
        rankscorein = fopen("rankscore", "wt");

        for(int i=0; i<5; i++)
        {
                for(int j=0; j<player; j++)
                {
                        printf("%d player name : ", i+1);
                        scanf("%s", &name[player][i]);
                        printf("%d score : ", i+1);
                        scanf("%d", &score[player][i]);
                        fscanf(ranknamein, "%s\n", &name[player][i]);
                        fscanf(rankscorein, "%d\n", &score[player][i]);
                }
        }
        fclose(ranknamein);
        fclose(rankscorein);
        
        ranknameout = fopen("rankname", "wt");
        for ( int i=0; i<5; i++)
                for ( int j=0; j<player; j++)
                        fprintf(ranknameout, "%s\n", &name[player][i]);

        rankscoreout = fopen("rankscore", "wt");
        for (int i=0; i<5; i++)
                for(int j=0; j<player; j++)
                        fprintf(rankscoreout, "%d\n", &score[player][i]);
        fclose(ranknameout);
        fclose(rankscoreout);

        printf("===============\n");
        printf(" R A N K I N G \n");
        printf("===============\n");

        for(int i=0; i<5; i++)
        {

                printf("*** LEVEL %d***\n", i+1);
                for(int l=0; l<=player; l++)
                {
                        for(int j=0; j<=player; j++)
                        {
                                if(score[l][i]>=score[l+j][i])
                                {
                                        tmp = score[l][i];
                                        score[l][i] = score[l+j][i];
                                        score[l+j][i] = tmp;

                                        tmp = name[l][i];
                                        name[l][i] = name[l+j][j];
                                        name[l+j][i] = tmp;
                                }
                        printf("%s : %d\n", &name[l][i], score[l][i]);
                        }
                if(l==0)
                        printf("NONE\n");

                printf("-----------------\n");
                }

        }
        return 0;
}
                                        
